{
  "name": "simsultai",
  "version": "1.0.10",
  "description": "Browse Internet and AI models side by side for free",
  "main": "dist/app/main.js",
  "scripts": {
    "start": "electron .",
    "obfuscate": "node obfuscate.js",
    "dist": "rimraf dist && npm run obfuscate && electron-builder"
  },
  "build": {
    "appId": "com.simsultai.desktop",
    "productName": "SimsultAI",
    "files": [
      "dist/app/**/*",
      "index.html",
      "package.json",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "parthagrawal312",
      "repo": "SimsultAI"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
    "target": ["dmg", "zip"],
    "icon": "assets/icon.icns",
    "asar": false,
    "identity": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "javascript-obfuscator": "^4.1.1",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "mime-types": "^3.0.1"
  }
}
